<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingLeft="72dp"
        android:paddingRight="72dp"
        android:layout_height="match_parent"
        tools:context=".login.LoginFragment">

    <EditText
            android:id="@+id/et_username_login"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="Username"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_password_login"
            android:layout_width="0dp"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_height="wrap_content"/>
    <EditText
            app:layout_constraintTop_toBottomOf="@id/et_username_login"
            app:layout_constraintBottom_toTopOf="@id/btn_submit_login"
            android:hint="Password"
            app:layout_constraintLeft_toLeftOf="@id/et_username_login"
            app:layout_constraintRight_toRightOf="@id/et_username_login"
            android:id="@+id/et_password_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btn_submit_login"
            app:layout_constraintTop_toBottomOf="@id/et_password_login"
            app:layout_constraintLeft_toLeftOf="@id/et_username_login"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@id/et_username_login"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>